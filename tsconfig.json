{
  "compilerOptions": {
    "types": ["@testing-library/jest-dom"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"],

      "@payload-config": ["./src/payload.config.ts"],
      "@payload-types": ["./src/payload-types.ts"],

      "@app/*": ["./src/app/(app)/*"],
      "@cms/*": ["./src/app/(payload)/*"],

      "@graphql": ["./src/app/web/graphql"],
      "@graphql/*": ["./src/app/web/graphql/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "src/next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/utilities/commentCode.js"
  ],
  "exclude": ["node_modules"]
}
